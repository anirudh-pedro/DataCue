# Environment Variables for DataCue Backend
# Copy this file to .env and fill in your actual values

# ============================================
# API KEYS & CREDENTIALS
# ============================================

# Groq API Key (for AI-powered knowledge agent)
# Get your free API key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Connection String (optional, falls back to in-memory storage)
# Example: mongodb://localhost:27017/datacue
# Example (Atlas): mongodb+srv://username:password@cluster.mongodb.net/datacue
MONGO_URI=your_mongodb_connection_string_here

# ============================================
# LLM CONFIGURATION
# ============================================

# LLM Model (Groq model to use for query responses)
# Options: llama-3.3-70b-versatile, llama-3.1-70b-versatile, mixtral-8x7b-32768
LLM_MODEL=llama-3.3-70b-versatile

# LLM Temperature (0.0 = deterministic, 1.0 = creative)
# Lower for factual data responses, higher for creative text
LLM_TEMPERATURE=0.3

# LLM Max Tokens (maximum response length)
LLM_MAX_TOKENS=500

# ============================================
# QUERY ENGINE LIMITS
# ============================================

# Maximum number of numeric columns to include in LLM context
MAX_NUMERIC_COLUMNS_CONTEXT=5

# Maximum number of categorical columns to include in LLM context
MAX_CATEGORICAL_COLUMNS_CONTEXT=5

# Maximum unique values to display for categorical columns
MAX_UNIQUE_VALUES_DISPLAY=10

# Maximum sample rows to use in analysis
MAX_SAMPLE_ROWS=5

# Default number of items for "top N" queries (when N not specified)
# Example: "show me the top customers" → shows top 5 by default
DEFAULT_TOP_N=5

# Maximum periods shown in temporal/time-series queries
# Example: Monthly revenue trend → shows last 12 months
MAX_TEMPORAL_PERIODS=12

# Include sample/full data in LLM context (true/false)
# WARNING: Enabling this increases token usage significantly
# Only use for small datasets or when LLM needs row-level access
INCLUDE_SAMPLE_DATA=false

# Maximum rows to send full dataset to LLM
# If dataset has <= this many rows, entire dataset is sent to LLM
# If dataset is larger, only summary statistics are sent
# WARNING: Large values (>100) can cause token limit errors
MAX_FULL_DATASET_ROWS=50

# ============================================
# DASHBOARD CONFIGURATION
# ============================================

# Maximum charts to generate per dashboard
MAX_CHARTS_PER_DASHBOARD=20

# Maximum KPI cards to display
MAX_KPI_CARDS=4

# Maximum AI insights to display
MAX_INSIGHTS_DISPLAY=10

# Default chart limit for primary dashboard view
DEFAULT_CHART_LIMIT=5

# ============================================
# DATA PROCESSING THRESHOLDS
# ============================================

# Outlier detection threshold (percentage)
OUTLIER_THRESHOLD_PERCENTAGE=5.0

# Correlation threshold for significant relationships
CORRELATION_THRESHOLD=0.7

# Missing data warning threshold (percentage)
MISSING_DATA_THRESHOLD=10.0

# ============================================
# SERVER CONFIGURATION
# ============================================

# API Host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# API Port
API_PORT=8000

# Allowed CORS Origins (comma-separated list)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# PAGINATION & CACHING
# ============================================

# Default page size for paginated endpoints
DEFAULT_PAGE_SIZE=20

# Maximum page size (to prevent memory issues)
MAX_PAGE_SIZE=100

# Cache TTL in seconds (for query results)
CACHE_TTL_SECONDS=3600

# ============================================
# OPTIONAL: Application Configuration
# ============================================

# ENVIRONMENT=development
# LOG_LEVEL=INFO

# ============================================
# FIREBASE AUTHENTICATION
# ============================================

# Disable Firebase authentication (for development)
# Set to 'true' to skip token validation and use mock user
DISABLE_FIREBASE_AUTH=true

# Firebase Project ID (must match your Firebase project)
FIREBASE_PROJECT_ID=your-firebase-project-id
